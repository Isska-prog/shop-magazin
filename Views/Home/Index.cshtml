@model IEnumerable<Shop.Model.Product>
@{
    ViewData["Title"] = "Интернет - магазин";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var product in Model)
			{
				if (product == Model.First()
					|| product == Model.ElementAt(2)
					|| product == Model.ElementAt(3))
				{
                <li data-target="#carouselExampleCaptions" data-slide-to="@product.ProductId"></li>

				}
			}
        </ol>

        <div class="carousel-inner">
            @foreach (var product in Model)
            {
                if (product == Model.First())
                {
                    <div class="carousel-item active">
                        <img src="@product.ProductLinkToPicture" class="d-block w-100" alt="@product.ProductName">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@product.ProductName</h5>
                            <p>@product.ProductDescription</p>
                        </div>
                    </div>
                }
                else if(product == Model.ElementAt(2) ||
                        product == Model.ElementAt(3))
                {
                    <div class="carousel-item">
                        <img src="@product.ProductLinkToPicture" class="d-block w-100" alt="@product.ProductName">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@product.ProductName</h5>
                            <p>@product.ProductDescription</p>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

