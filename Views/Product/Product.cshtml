@model IEnumerable<Shop.Model.Product>
@{
    ViewData["Title"] = "Выбор товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@product.ProductLinkToPicture" height="225" />
                        <div class="card-body">
                            <p class="card-text">@product.ProductDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="OneProduct" asp-action="OneProduct" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-secondary">Страница товара</a>
                                </div>
                                <small class="text-muted">@product.ProductPrice</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>   